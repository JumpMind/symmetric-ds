<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jumpmind.symmetric</groupId>
    <artifactId>symmetric-server</artifactId>
    <packaging>jar</packaging>
    <version>3.0.0-SNAPSHOT</version>
    <name>server</name>

    <parent>
        <groupId>org.jumpmind.symmetric</groupId>
        <artifactId>symmetric-parent</artifactId>
        <version>3.0.0-SNAPSHOT</version>
        <relativePath>../symmetric-parent/pom.xml</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>org.jumpmind.symmetric.SymmetricLauncher
                            </mainClass>
                            <addClasspath>true</addClasspath>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <forkMode>always</forkMode>
                    <argLine>-Xms512m -Xmx1024m</argLine>
                    <systemProperties>
                        <property>
                            <name>test.root</name>
                            <value>${test.root}</value>
                        </property>
                        <property>
                            <name>test.client</name>
                            <value>${test.client}</value>
                        </property>
                    </systemProperties>
                    <additionalClasspathElements>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/ojdbc6.jar
                        </additionalClasspathElement>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/ojdbc5.jar
                        </additionalClasspathElement>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/ojdbc14.jar
                        </additionalClasspathElement>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/db2jcc.jar
                        </additionalClasspathElement>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/ifxjdbc.jar
                        </additionalClasspathElement>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/ifxlang.jar
                        </additionalClasspathElement>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/interclient.jar
                        </additionalClasspathElement>
                    </additionalClasspathElements>
                    <includes>
                        <include>**/*TestSuite.java</include>
                        <include>**/*UnitTest.java</include>
                    </includes>
                </configuration>
            </plugin>
        </plugins>
    </build>

