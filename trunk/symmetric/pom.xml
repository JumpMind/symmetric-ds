<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jumpmind.symmetric</groupId>
    <artifactId>symmetric-build</artifactId>
    <packaging>pom</packaging>
    <version>2.1.1-SNAPSHOT</version>
    <name>Symmetric Build</name>

    <scm>
        <connection>scm:svn:https://symmetricds.svn.sourceforge.net/svnroot/symmetricds/trunk/symmetric</connection>
        <developerConnection>scm:svn:https://symmetricds.svn.sourceforge.net/svnroot/symmetricds/trunk/symmetric</developerConnection>
        <url>https://symmetricds.svn.sourceforge.net/svnroot/symmetricds/trunk/symmetric</url>
    </scm>

    <distributionManagement>
        <site>
            <id>dav.codehaus.org</id>
            <url>dav:https://dav.codehaus.org/symmetricds/</url>
        </site>
        <!-- use the following if you're not using a snapshot version. -->
        <repository>
            <id>dav.codehaus.org</id>
            <name>SymmetricDS Repo</name>
            <url>dav:https://dav.codehaus.org/repository/symmetricds/
            </url>
        </repository>
        <!-- use the following if you ARE using a snapshot version. -->
        <snapshotRepository>
            <id>dav.codehaus.org</id>
            <name>SymmetricDS Repo</name>
            <url>dav:https://dav.codehaus.org/snapshots.repository/symmetricds/
            </url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>
    
    <build>
        <extensions>
         <extension>
          <groupId>org.apache.maven.wagon</groupId>
          <artifactId>wagon-webdav</artifactId>
          <version>1.0-beta-2</version>
         </extension>
        </extensions>
        <plugins>
            <plugin>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <allowTimestampedSnapshots>true</allowTimestampedSnapshots>
                    <goals>deploy</goals>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <modules>
        <module>symmetric-parent</module>
    </modules>

</project>
