<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jumpmind.symmetric</groupId>
    <artifactId>symmetric3-jdbc</artifactId>
    <packaging>jar</packaging>
    <version>3.0.0-SNAPSHOT</version>
    <name>symmetric3-jdbc</name>

    <parent>
        <groupId>org.jumpmind.symmetric</groupId>
        <artifactId>symmetric3-parent</artifactId>
        <version>3.0.0-SNAPSHOT</version>
        <relativePath>../symmetric3-parent/pom.xml</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <forkMode>always</forkMode>
                    <argLine>-Xms512m -Xmx1024m</argLine>
                    <additionalClasspathElements>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/ojdbc6.jar
                        </additionalClasspathElement>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/ojdbc5.jar
                        </additionalClasspathElement>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/ojdbc14.jar
                        </additionalClasspathElement>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/db2jcc.jar
                        </additionalClasspathElement>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/ifxjdbc.jar
                        </additionalClasspathElement>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/ifxlang.jar
                        </additionalClasspathElement>
                        <additionalClasspathElement>
                            ${user.home}/.symmetricds/lib/interclient.jar
                        </additionalClasspathElement>
                    </additionalClasspathElements>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.jumpmind.symmetric</groupId>
            <artifactId>symmetric3-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jumpmind.symmetric</groupId>
            <artifactId>symmetric3-test</artifactId>
            <scope>test</scope>
        </dependency>        
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.sourceforge.jtds</groupId>
            <artifactId>jtds</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.firebirdsql.jdbc</groupId>
            <artifactId>jaybird</artifactId>
            <scope>provided</scope>
        </dependency>
        <!-- Required for jaybird -->
        <dependency>
            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-j2ee-connector_1.6_spec</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

</project>
